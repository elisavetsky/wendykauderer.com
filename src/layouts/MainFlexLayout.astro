---
// import sitewide sections for footer
import { frontmatter } from "../configuration/SitewideConfig.md";
const sections = frontmatter.sections;

// import components
import Header from "../components/Header.astro"
import Footer from "../components/Footer.jsx";
---

<div class="flex flex-col md:flex-row pt-12 mx-auto grow items-start min-w-full max-w-screen-2xl gap-4">
   <!-- <Header shadow={options?.headerShadow} /> -->
   <Header />
   <div class="relative w-full text-primary-text dark:text-primary-dark-text m-auto flex flex-col min-h-[125vh] grow md:pr-8 md:w-9/12 lg:m-0">
      <main id="main-content" class="pb-16 pt-7">
         <slot />
         
      </main>
      <Footer footerNav={sections} />
   </div>
</div> 