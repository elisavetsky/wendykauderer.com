---
// Astro
import { Image } from "astro:assets";

// import siteconfig
import { frontmatter } from "../configuration/SitewideConfig.md";
const curvedEdges = frontmatter.curved_image_edges;

const { src, classes, ...props} = Astro.props;
---

<Image src={src} {...props} class={`mt-2 shadow-xl ${curvedEdges ? 'rounded-md' : ''} ${classes}`} />
