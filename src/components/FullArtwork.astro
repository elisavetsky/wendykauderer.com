---
// import components
import ImageWrapper from "./ImageWrapper.astro";
import ArtDetails from "./ArtDetails.astro";

// import utils
import { truncateText } from "../utils/textTools";

const { 
   title, 
   date, 
   artType, 
   tags, 
   href, 
   mainImage,
   images, 
   description, 
   showFullDescription 
} = Astro.props;
---

<article class="prose max-w-none dark:prose-invert dark:prose-p:text-gray-100">
   <div class="px-4 md:px-0">
      
   </div>
   <div class="sm:px-4 md:px-0">
      <a href={href}>
         <ImageWrapper 
            src={mainImage.src} 
            alt={mainImage.alt} 
            quality={50}
            classes={"w-full relative transition transition-translate ease-in-out delay-75 duration-300 hover:shadow-xl hover:shadow-black/20 dark:hover:shadow-slate-700 sm:hover:translate-x-px sm:hover:-translate-y-1"} 
         />
      </a> 
