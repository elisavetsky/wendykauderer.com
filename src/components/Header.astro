         <Logo />
      
         <Burger />   
      </div>
      <Navigation />
   </div>
</header>

<style>
   header::before {
      @apply absolute inset-0 -z-10;
   }

   .patties::before {
      @apply top-5;
   }
   
   .patties::after {
      @apply bottom-4 right-1.5;
   }

   .patties::before,
   .patties::after {
      content: '';
      @apply absolute h-[2px] w-10 bg-gray-900;
   }
</style>