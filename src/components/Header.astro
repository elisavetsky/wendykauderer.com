---
import Burger from "./Burger.astro";
import Navigation from "./Navigation.astro";
import Logo from "./Logo.jsx";

const { shadow } = Astro.props;
---

<header
   class={
   `navbar-header absolute top-0 text-primary-text w-full z-40  dark:text-primary-dark-text md:before:backdrop-blur-none md:sticky md:top-4 md:overflow-y-auto md:min-w-[16rem] md:w-3/12 md:max-h-screen md:max-w-sm`
}>
   <div class="navbar-container px-4 py-4 mx-auto max-w-screen-xl md:bg-transparent md:dark:bg-transparent md:border-0 md:overscroll-contain md:px-6 md:py-0 md:pr-0 md:flex md:flex-col md:gap-10  md:justify-between">
      <div class="top-0 flex justify-between gap-2 md:backdrop-blur-sm md:bg-inherit md:sticky md:z-50 md:pl-4 md:py-7   dark:md:bg-inherit">
         <Logo />
      
         <Burger />   
      </div>
      <Navigation />
   </div>
</header>

<style>
   header::before {
      @apply absolute inset-0 -z-10;
   }

   .patties::before {
      @apply top-5;
   }
   
   .patties::after {
      @apply bottom-4 right-1.5;
   }

   .patties::before,
   .patties::after {
      content: '';
      @apply absolute h-[2px] w-10 bg-gray-900;
   }
</style>