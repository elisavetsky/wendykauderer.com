<header class={
   `transition-all text-gray-900 absolute w-full z-[100] before:backdrop-blur-lg dark:text-gray-100
   ${shadow ? "bg-white/50 shadow-xl dark:bg-stone-950/50 dark:shadow-slate-950/20" : ""}`
}>
