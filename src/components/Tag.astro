---
const { title, artType } = Astro.props;
---

{
   artType ? 
   <span class="h-fit px-2 py-0.5 last-of-type:mr-0 flex items-center rounded-full bg-cyan-50/70 dark:bg-cyan-950 text-slate-600 dark:text-slate-300">{artType}</span>
   : 
   <span class="h-fit px-2 py-0.5 last-of-type:mr-0 flex items-center rounded-full bg-slate-50 dark:bg-slate-800 text-slate-600 dark:text-slate-300">{title}</span>
}
