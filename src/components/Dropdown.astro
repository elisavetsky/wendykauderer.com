---
// import components
import DropdownItem from "./DropdownItem.astro";

const { items } = Astro.props;
---

<ul class="dropdown-menu hidden absolute z-10 left-0 rounded-lg shadow-lg top-full min-w-max w-44 py-2 bg-white/60 before:backdrop-blur-lg dark:bg-black/60 md:left-[unset] md:right-0">
   {
      items.map((item) => {
         return (
            <DropdownItem item={item} />
         )
      })
   }
</ul>

<style>
   ul::before {
      border-radius: inherit;
      @apply transition-all absolute inset-0 -z-10;
   }
</style>