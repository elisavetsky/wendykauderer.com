---
// import Sitewide Config
import * as SitewideConfig from "../configuration/SitewideConfig.md"

import Logo from "./Logo.astro";
---

<footer class="transition-colors font-light border-t-slate-400 border-t text-slate-800 dark:border-t-slate-500 dark:text-slate-100">
   <div class="px-5 pt-20 pb-12 flex flex-col mx-auto max-w-screen-2xl sm:text-right md:px-6 md:justify-between md:items-center">
      <div class="self-start text-2xl">
         <a href="/" class="transition-all absolute hover:-translate-y-[2px] hover:translate-x-[2px] hover:text-slate-400 dark:hover:text-slate-400">{SitewideConfig.frontmatter.site_name}</a>
      </div>
      <div class="w-full mt-20 flex flex-col sm:flex-row sm:justify-end">
         <div class="sm:mr-3">Powered by Astro</div>
         <span class="hidden sm:block sm:mr-3"> | </span>
         <span>A website by <a href="https://gabrielelisavetsky.com" class="transition-[inherit] hover:text-slate-400 dark:hover:text-slate-400">Gabriel Elisavetsky</a></span>
      </div>
   </div>
</footer>